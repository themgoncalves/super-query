{
  "name": "@themgoncalves/super-query",
  "version": "0.1.1",
  "description": "ðŸŽ  A super media-query for styled-component. Intuitive and easy of use.",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel source -d lib",
    "lint": "eslint --ext js --ext jsx source || exit 0",
    "lint:fix": "eslint --ext js --ext jsx source --fix|| exit 0",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublish": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/themgoncalves/super-query.git"
  },
  "keywords": [
    "styled-component",
    "media-query",
    "screen",
    "orientation",
    "responsiviness",
    "mobile-first"
  ],
  "author": "Marcos GonÃ§alves <marx_souza@yahoo.com.br>",
  "license": "MIT",
  "bugs": "https://github.com/themgoncalves/super-query/issues",
  "engines": {
    "node": ">=4.2.4"
  },
  "peerDependencies": {
    "styled-components": ">= 2.0.0 < 4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
